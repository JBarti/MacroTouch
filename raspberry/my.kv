#:kivy 1.10.1

MainScreen:

<MainScreen>:


<BluetoothPending>:
    orientation: 'vertical'
    Button:
        text:"TEKST"

<MainLayout>:
    orientation: 'horizontal'
    BoxLayout:
        size_hint:(.2,1)
        orientation: 'vertical'
        padding: [0,0,0,0]
        CToggleButton:
            toggled: True
            text: "Apps"
            group: "option"
            size_hint_y: 0.1
            down: content.switch("apps")
            on_press: 
        CToggleButton:
            text: "Widgets"
            group: "option"
            size_hint_y: 0.1
            down: content.switch("widgets")
            on_press: 
        CToggleButton:
            text: "Devices"
            group: "option"
            size_hint_y: 0.1
            down: content.switch("devices")
            on_press: 
        CToggleButton:
            text: "Macros"
            group: "option"
            size_hint_y: 0.1
            down: content.switch("macros")
            on_press: 
        AnchorLayout:
            anchor_y: 'bottom'
            ToggleButton:
                text: "CONFIG"
                group: "option"
                size_hint_y: 0.1
    Content:
        id: content
