#:kivy 1.10.1
#: import TreeViewLabel kivy.uix.treeview.TreeViewLabel

<Macro@BoxLayout>:
    orientation: "horizontal"
    size_hint: None, None
    width: self.height
    height: root.height
    canvas:
        Color:
            rgb: 0.2, .2, 0.2
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgb: 0,0,0
        Rectangle:
            pos: (self.pos[0]+1, self.pos[1]+1)
            size: (self.size[0]-2, self.size[1]-2)

<MacrosOption>:
    orientation: "horizontal"
    ScrollView:
        scroll_type: ['bars']
        ButtonGrid:
            size_hint_x:1
            size_hint_y:None
            height: self.minimum_height