#:kivy 1.9.1

<DevicesOption>:
    rows: 3
    BoxLayout:
        orientation: 'vertical'
        gray: '#151515'
        size_hint_y: 0.3
        canvas:
            Color:
                rgb: hex_to_color(self.gray)
            Rectangle:
                size: self.size
                pos: self.pos
        DisplayText:
            padding: 30,0
            height: 50
            text: 
                """
                [color=#7f58c5][size=50][font=./fonts/Cairo/Cairo-Black]Devices[/font][/size][/color][size=18]
                [/size]
                """
        DisplayText:
            padding: 30,0
            height: 50
            text:
                """
                Emulate common PC input devices
                """
    StackLayout:
        orientation: "lr-tb"
        padding: [20,20,10,10]
        spacing: 10
        id: devices

<ButtonImage@Image>
    size_hint_y: 0.5
    size_hint_x: None
