#:kivy 1.10.1
#:import hex_to_color kivy.utils.get_color_from_hex

<WidgetsOption>:
    rows: 3
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        gray: '#1515155'
        size_hint_y: 0.3
        canvas:
            Color:
                rgb: hex_to_color(self.gray)
            Rectangle:
                size: self.size
                pos: self.pos
        DisplayText:
            padding: 30,0
            height: 50
            text: 
                """
                [color=#7f58c5][size=50][font=./fonts/Cairo/Cairo-Black]Widgets[/font][/size][/color][size=18]
                [/size]
                """
        DisplayText:
            padding: 30,0
            height: 50
            text:
                """
                allow you graphically represent data comming from your PC
                """
    ScrollView:
        StackLayout:
            orientation: "lr-tb"
            padding: [20,20,10,10]
            spacing: 10
            id: widgets


<SupportedWidget@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 60
    canvas.after:
        Color:
            rgba: 100, 100, 100, 0.25
        RoundedRectangle:
            size: self.size[0]-50, self.size[1]
            pos: self.pos
            radius: [28,]
    Image:
        allow_stretch: True
        keep_ratio: True
        size_hint_y: 1
        size_hint_x: None
        width: 60
        source: './icons/system-monitor.png'
    DisplayText:
        size_hint_y: 1
        padding_x: 20
        text: "[size=18]System Monitor[/size]"

<ButtonImage@Image>
    size_hint_y: 0.5
    size_hint_x: None