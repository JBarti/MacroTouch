#:import hex_to_color kivy.utils.get_color_from_hex
#:kivy 1.10.1

<SystemMonitor@BoxLayout>:
    orientation: "vertical"
    padding: [50,0,0,0]
    size_hint_y: 1
    size_hint_x: 1
    FloatLayout:
        orientation: "vertical"
        anchor_y: "center"
        Label: 
            text: "CPU:"
            size_hint_x: None
            font_size: "20sp"
            pos: root.pos[0], root.pos[1]+220
        BoxLayout:
            id: cpus
            spacing: 20
            orientation: "vertical"
            pos: root.pos[0]+20, root.pos[1]+20
        Label:
            id: temp
            markup: True
            font_size: "30sp"
            text: "[color=7f58c5]Temp:  [/color]20Â°C"
            pos: root.pos[0]+240, root.pos[1]+200
        Label:
            id: ram
            markup: True
            font_size: "30sp"
            text: "[color=7f58c5]Ram:  [/color]0/0"
            pos: root.pos[0]+261, root.pos[1]+140
    

<CPUUsage@StackLayout>
    text: ""
    orientation: "lr-tb"
    size_hint_y: None
    size_hint_x: .6
    height: 40
    spacing: 5
    canvas:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: .5
            rectangle: self.x, self.y, self.width, self.height


        
<UsageBlock@Widget>
    purple: '#7f58c5'
    pos: root.pos
    size_hint: None, 1
    width: 10
    canvas: 
        Color: 
            rgb: hex_to_color(self.purple)
        Rectangle:
            size: self.size
            pos: self.pos

    
