#:import hex_to_color kivy.utils.get_color_from_hex
#:kivy 1.10.1

<SystemMonitor@BoxLayout>:
    orientation: "vertical"
    CPUUsage:
        id: s1
        text: "1"
    CPUUsage:
        id: s2
        text: "2"
    CPUUsage:
        id: s3
        text: "3"
    CPUUsage:
        id: s4
        text: "4"

<CPUUsage@StackLayout>
    text: ""
    orientation: "lr-tb"
    padding: [120,0,0,0]
    size_hint_y: None
    height: 50
    DisplayText:
        text: root.text
        size_hint: None, None
        width: 50
        height: root.height/2
    StackLayout:
        id: stack
        gray: '#151515'
        size_hint: 0.5, None
        height: root.height/2
        spacing: 5
        canvas:
            Color:
                rgb: hex_to_color(self.gray)
            Rectangle: 
                size: self.size
                pos: self.pos
        UsageBlock:
        UsageBlock:
        UsageBlock:


        
<UsageBlock@Widget>
    purple: '#7f58c5'
    pos: root.pos
    size_hint: None, 1
    width: 5
    canvas: 
        Color: 
            rgb: hex_to_color(self.purple)
        Rectangle:
            size: self.size
            pos: self.pos

    
